# Application Configuration
VITE_APP_NAME=Panimalar Placement Portal
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_SECRET=your-secret-key-here
VITE_JWT_EXPIRY=7d
VITE_REFRESH_TOKEN_EXPIRY=30d

# Database Configuration (if needed for future backend)
DATABASE_URL=postgresql://username:password@localhost:5432/placement_db

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,png,jpg,jpeg

# Third-party Services (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Analytics (optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Feature Flags
VITE_ENABLE_DARK_MODE=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# Security
VITE_ENABLE_HTTPS=false
VITE_CSP_POLICY=default-src 'self'

# Development Tools
VITE_ENABLE_DEBUG=true
VITE_LOG_LEVEL=debug